
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <br />
            <br />
            <div class="row">
                <div class="col-6">
                    <h2 class="text-primary"> Lista de Empleado</h2>
                </div>
                <div class="col-6 text-right">
                    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i>Nuevo</a>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-12">
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table id="tblEmpleados" class="table table-striped table-bordered" style="width: 100%;">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Primer Nombre</th>
                                        <th>Segundo Nombre</th>
                                        <th>Telefono</th>
                                        <th></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->

</div>


@section Scripts{
    <script src="~/js/empleado.js"></script>
}
